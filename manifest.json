{
    "name": "Virus Blocker",
    "version": "1.0",
    "manifest_version": 3,
    "description":"exten√£o para verificar sites maliciosos",
    "permissions": [
      "webNavigation",
      "tabs",
      "activeTab",
      "storage",
      "notifications",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },  
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/script.js"]
      }
    ]
  }
  